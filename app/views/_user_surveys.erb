<div class="yoursurveys">
  <p id="lessertitle">Your Surveys:</p>
  <% @user.surveys.all.each do |survey| %>
  <% percent_yes = "N/A" %>
  <% percent_yes = (((survey.yes_num).to_f/(survey.yes_num+survey.no_num).to_f)*100).round(2) if (survey.yes_num + survey.no_num) > 0 %>
  <ul>
  	<li>
  		<a href="/surveys/<%=survey.id%>"><%=survey.title%></a>
      <div class='stats'>
    		<p>Positive Stats: <%= percent_yes %> <%= percent_yes.is_a?(Float) ? "%" : "" %> </p>
    		<p>Times taken: <%= survey.num_taken %></p>
    		<p>Created at: <%= survey.created_at %></p>
    		<a href="/surveys/<%=survey.id%>/edit" class="btn">Edit</a>
    		<a href="/surveys/<%=survey.id%>" class="btn delete_survey" name="<%=survey.id%>">Delete</a>
    </div>
  	</li>
  </ul>
  <% end %>
</div>
